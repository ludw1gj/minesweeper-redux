{
  "name": "minesweeper-redux",
  "version": "5.2.3",
  "description": "A JavaScript minesweeper game engine implementation supporting the use of redux via the provided actions and reducer. It is written in TypeScript in an immutable approach.",
  "type": "module",
  "main": "./dist/minesweeper-redux.umd.cjs",
  "module": "./dist/minesweeper-redux.js",
  "exports": {
    ".": {
      "import": "./dist/minesweeper-redux.js",
      "require": "./dist/minesweeper-redux.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "author": "ludw1gj",
  "license": "ISC",
  "keywords": [
    "Minesweeper",
    "Redux",
    "Typescript",
    "Game"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/ludw1gj/minesweeper-redux.git"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "prettier": "^2.8.0",
    "typescript": "^4.6.4",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^1.7.1",
    "vitest": "^0.25.7"
  }
}
