{
  "name": "minesweeper-redux",
  "version": "3.0.0",
  "description": "A JavaScript minesweeper game engine implementation supporting the use of redux via the provided actions and reducer. It is written in TypeScript in a functional style.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch & nodemon dist",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "ludw1gj",
  "license": "ISC",
  "keywords": [
    "Minesweeper",
    "Functional",
    "Redux",
    "Typescript",
    "Game"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ludw1gj/minesweeper-redux.git"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.4.0",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-circular-imports": "^0.6.2",
    "typescript": "^3.3.3"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {}
}
